<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="vincent.riva.channelmessaging.Fragments.ChannelListFragment"
        android:id="@+id/fragmentChannelList"
        tools:layout="@layout/fragment_channel_list" />
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="vincent.riva.channelmessaging.Fragments.MessageFragment"
        android:id="@+id/fragmentMessage"
        android:layout_gravity="left"
        tools:layout="@layout/fragment_message" />
</LinearLayout>